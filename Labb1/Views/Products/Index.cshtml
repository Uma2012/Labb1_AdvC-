@model IEnumerable<Labb1.Products>

@{
    ViewData["Title"] = "Index";
}

<h1>All Products</h1>
<form method="post">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-lg-4 mb-5 d-flex justify-content-center">
                    <div class="card" style="width: 18rem;">                      
                        <img class="card-img-top" style="height:200px;" src="@Url.Content("~/Images/" + item.photo)" alt="@item.productName" />
                      
                        <div class="card-body col text-center">
                            <h5 class="card-title">@item.productName</h5>
                            <p class="card-text">@item.price.ToString("C0")</p>
                           
                            <a asp-action="ProductDetails" asp-controller="Products" asp-route-productid="@item.id" >View Details</a>
                            <br />
                            <br />
                            <div>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    @*<button class="btn btn-dark" id="item_added_to_cart" onclick="DisplayResponseMessage(@item.productName)" asp-action="AddToCart" asp-controller="ShoppingCart" asp-route-productid="@item.id">Buy</button>*@
                                    <button class="btn btn-dark" asp-action="AddToCart" asp-controller="ShoppingCart" asp-route-productid="@item.id">Buy</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</form>



